<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#09A1FF"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:id="@+id/hitungcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palamoto"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:elevation="4dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hitungccmotor"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
           android:textAlignment="textEnd" />

        <!-- Icons in Card -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tohitungcc"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/iconarrow" /> <!-- Replace with arrow icon -->
            <ImageView
                android:id="@+id/toinformasi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconcircle" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/batangmoto"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:elevation="4dp"><!-- Pastikan file card_border ada di drawable -->


        <!-- Text in Card -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hitungkompresimotor"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="textEnd" />

        <!-- Icons in Card -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/iconarrow" /> <!-- Replace with arrow icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconcircle" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kakimoto"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:elevation="4dp"><!-- Pastikan file card_border ada di drawable -->


        <!-- Text in Card -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lubangventuri"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Icons in Card -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/iconarrow" /> <!-- Replace with arrow icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iconcircle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
